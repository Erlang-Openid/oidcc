{minimum_otp_vsn, "18.1"}.

{erl_opts, [debug_info, warnings_as_errors]}.

{deps, [
        {erljwt, "0.1.0"},
        {gun, "1.0.0-pre.1"},
        {uri, "0.1.0"}
       ] 
}.

{plugins, [
           {rebar3_lint, {git, "https://github.com/bwegh/rebar3_lint.git", {branch, "master"}}},
           rebar3_proper,
           rebar3_auto,
           rebar3_run
          ]}.

{profiles, [
            {test, [
                    {deps, [meck]},
                    {cover_enabled, true}
                   ]}
           ]}.

{elvis, [
         #{dirs => ["."],
           filter => "elvis.config",
           ruleset => elvis_config },
         #{dirs => ["src"],
           filter => "*.erl",
           ruleset => erl_files,
           rules => [{elvis_style, invalid_dynamic_call, #{ignore => [oidcc_client]}}]}, 
         #{dirs => ["."],
           filter => "Makefile",
           ruleset => makefiles },
         #{dirs => ["."],
           filter => "rebar.config",
           ruleset => rebar_config }
        ] }.
